generator client {
  provider = "prisma-client-js"
  output = "../src/generated/client"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  tasks    Task[]
}

model Task {
  id          String  @id @default(uuid())
  title       String
  description String?
  status      String
  userId      String
  user        User    @relation(fields: [userId], references: [id])
}
